<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/residentProfileFrameLayoutOpenedView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_open_view_border">

    <TextView
        android:id="@+id/profileNameLabel"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Name:"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileDoornoLabel"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="145dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Door No:"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileNameView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/happy_monkey"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profilePhoneLabel"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Phone:"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profilePhoneView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/happy_monkey"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profileBirthdateView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/happy_monkey"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profileHometownView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/happy_monkey"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profileDoornoView"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="145dp"
        android:fontFamily="@font/happy_monkey"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profileBirthdateLabel"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Birthdate:"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileHometownLabel"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Hometown:"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileViewTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/happy_monkey"
        android:text="Your Profile"
        android:textAlignment="center"
        android:textColor="#323536"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/profileEditButton"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:layout_gravity="start|top"
        android:background="@drawable/profile_open_edit_button_border"
        app:srcCompat="@drawable/editprofilebuttonimage" />

</FrameLayout>
