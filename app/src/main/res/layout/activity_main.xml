<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/corporateLabel"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="6dp"
        android:background="#2AB0B8B0"
        android:fontFamily="@font/amaranth_italic"
        android:text="SadBear Incorporate"
        android:textAlignment="center"
        android:textColor="#D5D0D0"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/enterpriseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/aldrich"
        android:text="Concierge Enterprise"
        android:textColor="@color/colorPrimary"
        android:textColorHighlight="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="#BEFFFFFF"
        android:drawableRight="@drawable/ic_action_flatnumberid"
        android:ems="10"
        android:hint="Flat Number ID"
        android:inputType="textPersonName"
        android:paddingLeft="4dp"
        android:paddingRight="2dp"
        android:shadowRadius="@android:integer/config_shortAnimTime"
        android:textColorHighlight="#8F8888"
        android:textColorLink="#352C2C"
        android:textCursorDrawable="@android:color/darker_gray"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="#BEFFFFFF"
        android:drawableRight="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="4dp"
        android:paddingRight="2dp"
        android:textColorHighlight="#8F8888"
        android:textColorLink="#352C2C"
        android:textCursorDrawable="@android:color/darker_gray"
        android:textSize="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/loginButton"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#E27E6767"
        android:layout_marginTop="460dp"
        app:cardCornerRadius="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/alef_bold"
                android:text="Login"
                android:textColor="#000000"
                android:textColorHighlight="@color/cardview_light_background"
                android:textColorLink="@color/cardview_light_background"
                android:textSize="20dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/wrongCredentialEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alef_bold"
        android:text="Wrong Credentials!"
        android:textSize="16dp"
        android:layout_marginTop="505dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="#FFFFFF" />

</RelativeLayout>